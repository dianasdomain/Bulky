@model Category

<form method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2> Create category </h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All"></div>
        <div asp-validation-summary="ModelOnly"></div> *@
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"> Category name </label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger p-0"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"> Display order </label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger p-0"></span>
        </div>
        <button type="submit" class="btn btn-primary"> Create </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"> Back to list </a>
    </div>
</form>

@* //for client side validation *@
@section Scripts{
    @{
    <partial name="__ValidationScriptsPartial"/> //to consume a partial view
    }
}