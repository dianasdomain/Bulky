@model Category

<form method="POST">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2> Delete category </h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"> Category name </label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"> Display order </label>
            <input asp-for="DisplayOrder" type="text" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger"> Delete </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary"> Back to list </a>
    </div>
</form>