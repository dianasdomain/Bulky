@page
@model BulkyWeb_RazorTemp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Category List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="categories/create" class="btn btn-dark"> <i class="bi bi-plus"></i> Create new category </a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Category name </th>
            <th> Display order</th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Categories.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td> @obj.Name </td>
                <td> @obj.DisplayOrder </td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-page="/categories/edit" asp-route-categoryId="@obj.CategoryId" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit </a>
                        <a asp-page="/categories/delete" asp-route-categoryId="@obj.CategoryId" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>